@model IEnumerable<AdminPaneNew.Areas.OfficialAdmin.Models.StudentReg>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/OfficialAdmin/Views/Shared/Layout.cshtml";
}
@section Pagename {

    Student Registration

}
<h2><b>Index</b></h2>

<p>
    @Html.ActionLink("Create New", "Create") | @Html.ActionLink("Upload Excel", "updateExcel")
</p>
<table class="table table-striped table-bordered table-hover" id="dataTables-example">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Fileno)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StudentName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FatherName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Address)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Contact)
            </th>
            <th>Action</th>
        </tr>
        </thead>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @item.Fileno@item.RollNo
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.StudentName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FatherName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Address)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Contact)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Studentid },new { @class="label label-info"}) |
                   
                    @Html.ActionLink("Delete", "Delete", new { id = item.Studentid }, new { @class = "label label-danger" })
                    @Html.ActionLink("Invoice", "Invoice", new { id = item.Studentid }, new { @class = "label  label-info" })

                    @Html.ActionLink("FeeDetail", "FeeDetail", new { roll = (item.Fileno)+(item.RollNo) }, new { @class = "label  label-info" })
                </td>
            </tr>
        }

</table>
